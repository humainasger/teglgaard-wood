---
import { BUSINESS_INFO } from '../constants/business'

interface Props {
  variant?: 'full' | 'compact'
}

const { variant = 'full' } = Astro.props

const team = [
  {
    name: 'Michael Teglgaard',
    role: 'Founder & Director',
    focus: 'Strategic partnerships, large accounts',
    email: 'mt@teglgaardwood.dk',
    phone: BUSINESS_INFO.phoneRaw,
    phoneDisplay: BUSINESS_INFO.phoneDisplay,
    image: '/images/team/michael.jpg',
    initials: 'MT',
  },
  {
    name: 'Asger Teglgaard',
    role: 'Operations & Technology',
    focus: 'Operations, logistics, systems',
    email: 'at@teglgaardwood.dk',
    phone: null,
    phoneDisplay: null,
    image: '/images/team/asger.jpg',
    initials: 'AT',
  },
]
---

{variant === 'full' ? (
  <section class="bg-gradient-to-br from-amber-50 via-orange-50 to-yellow-50 py-20 lg:py-24 relative overflow-hidden">
    <!-- Decorative elements -->
    <div class="absolute top-0 right-0 w-96 h-96 bg-amber-200/30 rounded-full blur-3xl"></div>
    <div class="absolute bottom-0 left-0 w-80 h-80 bg-orange-200/30 rounded-full blur-3xl"></div>
    
    <div class="max-w-screen-xl mx-auto px-4 relative">
      <div class="text-center mb-12">
        <span class="inline-block text-amber-700 font-semibold text-sm uppercase tracking-wider mb-4">Direct Contact</span>
        <h2 class="text-3xl lg:text-4xl font-bold text-gray-900 mb-4">Talk to Us Directly</h2>
        <p class="text-lg text-gray-600 max-w-2xl mx-auto">
          No call centers, no gatekeepers. Reach the people who make decisions.
        </p>
      </div>

      <div class="grid md:grid-cols-2 gap-8 max-w-4xl mx-auto">
        {team.map((person) => (
          <div class="bg-white rounded-2xl shadow-lg p-8 border border-amber-100 hover:shadow-xl transition-shadow">
            <div class="flex items-start gap-6">
              <!-- Avatar -->
              <div class="flex-shrink-0">
                <div class="w-20 h-20 rounded-full bg-gradient-to-br from-amber-400 to-orange-500 flex items-center justify-center shadow-lg ring-4 ring-white">
                  <img 
                    src={person.image} 
                    alt={person.name}
                    class="w-20 h-20 rounded-full object-cover"
                    onerror="this.style.display='none'; this.nextElementSibling.style.display='flex';"
                  />
                  <span class="hidden text-white text-xl font-bold items-center justify-center w-full h-full">
                    {person.initials}
                  </span>
                </div>
              </div>
              
              <!-- Info -->
              <div class="flex-1 min-w-0">
                <h3 class="text-xl font-bold text-gray-900 mb-1">{person.name}</h3>
                <p class="text-amber-700 font-medium text-sm mb-2">{person.role}</p>
                <p class="text-gray-500 text-sm mb-4">{person.focus}</p>
                
                <div class="space-y-2">
                  <a 
                    href={`mailto:${person.email}`}
                    class="flex items-center gap-2 text-gray-600 hover:text-amber-700 transition-colors text-sm"
                  >
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
                    </svg>
                    {person.email}
                  </a>
                  {person.phone && (
                    <a 
                      href={`tel:${person.phone}`}
                      class="flex items-center gap-2 text-gray-900 hover:text-amber-700 transition-colors font-medium"
                    >
                      <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
                      </svg>
                      {person.phoneDisplay}
                    </a>
                  )}
                </div>
              </div>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>
) : (
  <!-- Compact variant for embedding -->
  <div class="bg-gradient-to-r from-amber-50 to-orange-50 rounded-2xl p-6 border border-amber-100">
    <h3 class="text-lg font-bold text-gray-900 mb-4">Talk to us directly</h3>
    <div class="flex flex-wrap gap-6">
      {team.map((person) => (
        <div class="flex items-center gap-3">
          <div class="w-12 h-12 rounded-full bg-gradient-to-br from-amber-400 to-orange-500 flex items-center justify-center shadow ring-2 ring-white">
            <img 
              src={person.image} 
              alt={person.name}
              class="w-12 h-12 rounded-full object-cover"
              onerror="this.style.display='none'; this.nextElementSibling.style.display='flex';"
            />
            <span class="hidden text-white text-sm font-bold items-center justify-center w-full h-full">
              {person.initials}
            </span>
          </div>
          <div>
            <p class="font-semibold text-gray-900 text-sm">{person.name}</p>
            <a 
              href={`mailto:${person.email}`}
              class="text-amber-700 text-xs hover:underline"
            >
              {person.email}
            </a>
          </div>
        </div>
      ))}
    </div>
  </div>
)}
