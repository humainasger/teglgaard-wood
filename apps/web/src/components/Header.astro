---
import { BUSINESS_INFO } from '../constants/business'
import TreeIcon from './icons/TreeIcon.astro'
import GreeneryIcon from './icons/GreeneryIcon.astro'
import TruckIcon from './icons/TruckIcon.astro'
import QualityIcon from './icons/QualityIcon.astro'
import NetworkIcon from './icons/NetworkIcon.astro'
import TeamIcon from './icons/TeamIcon.astro'

const currentPath = Astro.url.pathname;
---

<header class="bg-white sticky top-0 z-50 shadow-sm">
  <!-- Top Bar -->
  <div class="bg-primary-800 text-white text-sm">
    <div class="max-w-screen-xl mx-auto px-4 py-2 flex justify-between items-center">
      <div class="flex items-center gap-6">
        <span class="hidden sm:inline-flex items-center gap-2 text-primary-200">
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
          </svg>
          50 Years of Excellence
        </span>
        <span class="hidden md:inline-flex items-center gap-2 text-primary-200">
          <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3.055 11H5a2 2 0 012 2v1a2 2 0 002 2 2 2 0 012 2v2.945M8 3.935V5.5A2.5 2.5 0 0010.5 8h.5a2 2 0 012 2 2 2 0 104 0 2 2 0 012-2h1.064"></path>
          </svg>
          Delivering across Europe
        </span>
      </div>
      <a 
        href={`tel:${BUSINESS_INFO.phoneRaw}`}
        class="flex items-center gap-2 font-medium hover:text-white text-white"
      >
        <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
        </svg>
        {BUSINESS_INFO.phoneDisplay}
      </a>
    </div>
  </div>

  <!-- Main Nav -->
  <nav class="border-b border-gray-100">
    <div class="max-w-screen-xl mx-auto px-4">
      <div class="flex items-center justify-between h-20">
        <!-- Logo -->
        <a href="/" class="flex items-center gap-3">
          <div class="flex items-center gap-2">
            <TreeIcon class="text-primary-600" size={36} />
            <div>
              <span class="text-xl font-bold text-gray-900">Teglgaard Wood</span>
              <span class="hidden sm:inline-block ml-2 text-xs bg-primary-100 text-primary-700 px-2 py-0.5 rounded-full font-semibold">
                Est. 1976
              </span>
            </div>
          </div>
        </a>

        <!-- Desktop Navigation -->
        <div class="hidden lg:flex items-center gap-1">
          <!-- Products Mega Menu -->
          <div class="relative group">
            <button 
              class={`flex items-center gap-1 px-4 py-2 rounded-lg font-medium transition-colors ${
                currentPath.startsWith('/products')
                  ? 'text-primary-700 bg-primary-50'
                  : 'text-gray-700 hover:text-primary-700 hover:bg-gray-50'
              }`}
            >
              Products
              <svg class="w-4 h-4 transition-transform group-hover:rotate-180" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
              </svg>
            </button>
            
            <!-- Mega Menu Dropdown -->
            <div class="absolute left-1/2 -translate-x-1/2 top-full pt-4 opacity-0 invisible group-hover:opacity-100 group-hover:visible transition-all duration-200">
              <div class="bg-white rounded-2xl shadow-xl border border-gray-100 p-6 w-[600px]">
                <div class="grid grid-cols-2 gap-6">
                  <!-- Christmas Trees -->
                  <a href="/products/christmas-trees" class="group/item flex gap-4 p-4 rounded-xl hover:bg-primary-50 transition-colors">
                    <div class="w-14 h-14 bg-primary-100 rounded-xl flex items-center justify-center flex-shrink-0 group-hover/item:bg-primary-200 transition-colors">
                      <TreeIcon class="text-primary-600" size={32} />
                    </div>
                    <div>
                      <h4 class="font-semibold text-gray-900 mb-1">Christmas Trees</h4>
                      <p class="text-sm text-gray-500">Nordmann, Noble, Fraser, Spruce. All sizes 1m-7m+.</p>
                    </div>
                  </a>
                  
                  <!-- Greenery -->
                  <a href="/products/greenery" class="group/item flex gap-4 p-4 rounded-xl hover:bg-primary-50 transition-colors">
                    <div class="w-14 h-14 bg-primary-100 rounded-xl flex items-center justify-center flex-shrink-0 group-hover/item:bg-primary-200 transition-colors">
                      <GreeneryIcon class="text-primary-600" size={32} />
                    </div>
                    <div>
                      <h4 class="font-semibold text-gray-900 mb-1">Decorative Greenery</h4>
                      <p class="text-sm text-gray-500">Noble fir, Nordmann, Cypress. Fresh-cut branches.</p>
                    </div>
                  </a>
                </div>
                
                <div class="mt-4 pt-4 border-t border-gray-100">
                  <a href="/products" class="flex items-center justify-between text-sm text-primary-600 font-medium hover:text-primary-700">
                    View all products
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3"></path>
                    </svg>
                  </a>
                </div>
              </div>
            </div>
          </div>

          <!-- Services Mega Menu -->
          <div class="relative group">
            <button 
              class={`flex items-center gap-1 px-4 py-2 rounded-lg font-medium transition-colors ${
                currentPath === '/services'
                  ? 'text-primary-700 bg-primary-50'
                  : 'text-gray-700 hover:text-primary-700 hover:bg-gray-50'
              }`}
            >
              Services
              <svg class="w-4 h-4 transition-transform group-hover:rotate-180" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 9l-7 7-7-7"></path>
              </svg>
            </button>
            
            <!-- Services Mega Menu Dropdown -->
            <div class="absolute left-1/2 -translate-x-1/2 top-full pt-4 opacity-0 invisible group-hover:opacity-100 group-hover:visible transition-all duration-200">
              <div class="bg-white rounded-2xl shadow-xl border border-gray-100 p-6 w-[700px]">
                <div class="grid grid-cols-3 gap-4">
                  <a href="/services#capabilities" class="group/item flex flex-col items-center text-center p-4 rounded-xl hover:bg-primary-50 transition-colors">
                    <div class="w-12 h-12 bg-primary-100 rounded-xl flex items-center justify-center mb-3 group-hover/item:bg-primary-200 transition-colors">
                      <NetworkIcon class="text-primary-600" size={28} />
                    </div>
                    <h4 class="font-semibold text-gray-900 text-sm mb-1">Sourcing Network</h4>
                    <p class="text-xs text-gray-500">European growers</p>
                  </a>
                  
                  <a href="/services#capabilities" class="group/item flex flex-col items-center text-center p-4 rounded-xl hover:bg-primary-50 transition-colors">
                    <div class="w-12 h-12 bg-primary-100 rounded-xl flex items-center justify-center mb-3 group-hover/item:bg-primary-200 transition-colors">
                      <TeamIcon class="text-primary-600" size={28} />
                    </div>
                    <h4 class="font-semibold text-gray-900 text-sm mb-1">Production Team</h4>
                    <p class="text-xs text-gray-500">On-site in Denmark</p>
                  </a>
                  
                  <a href="/services#capabilities" class="group/item flex flex-col items-center text-center p-4 rounded-xl hover:bg-primary-50 transition-colors">
                    <div class="w-12 h-12 bg-primary-100 rounded-xl flex items-center justify-center mb-3 group-hover/item:bg-primary-200 transition-colors">
                      <QualityIcon class="text-primary-600" size={28} />
                    </div>
                    <h4 class="font-semibold text-gray-900 text-sm mb-1">Quality Control</h4>
                    <p class="text-xs text-gray-500">Professional grading</p>
                  </a>
                  
                  <a href="/services#logistics" class="group/item flex flex-col items-center text-center p-4 rounded-xl hover:bg-primary-50 transition-colors">
                    <div class="w-12 h-12 bg-primary-100 rounded-xl flex items-center justify-center mb-3 group-hover/item:bg-primary-200 transition-colors">
                      <TruckIcon class="text-primary-600" size={28} />
                    </div>
                    <h4 class="font-semibold text-gray-900 text-sm mb-1">Logistics</h4>
                    <p class="text-xs text-gray-500">Europe-wide delivery</p>
                  </a>
                  
                  <a href="/services#private-label" class="group/item flex flex-col items-center text-center p-4 rounded-xl hover:bg-primary-50 transition-colors">
                    <div class="w-12 h-12 bg-primary-100 rounded-xl flex items-center justify-center mb-3 group-hover/item:bg-primary-200 transition-colors">
                      <svg class="w-7 h-7 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z"></path>
                      </svg>
                    </div>
                    <h4 class="font-semibold text-gray-900 text-sm mb-1">Private Label</h4>
                    <p class="text-xs text-gray-500">Your brand, our trees</p>
                  </a>
                  
                  <a href="/services" class="group/item flex flex-col items-center text-center p-4 rounded-xl hover:bg-primary-50 transition-colors">
                    <div class="w-12 h-12 bg-primary-100 rounded-xl flex items-center justify-center mb-3 group-hover/item:bg-primary-200 transition-colors">
                      <svg class="w-7 h-7 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
                      </svg>
                    </div>
                    <h4 class="font-semibold text-gray-900 text-sm mb-1">Fast & Flexible</h4>
                    <p class="text-xs text-gray-500">Custom solutions</p>
                  </a>
                </div>
                
                <div class="mt-4 pt-4 border-t border-gray-100">
                  <a href="/services" class="flex items-center justify-between text-sm text-primary-600 font-medium hover:text-primary-700">
                    How we work
                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3"></path>
                    </svg>
                  </a>
                </div>
              </div>
            </div>
          </div>

          <!-- About -->
          <a 
            href="/about" 
            class={`px-4 py-2 rounded-lg font-medium transition-colors ${
              currentPath === '/about'
                ? 'text-primary-700 bg-primary-50'
                : 'text-gray-700 hover:text-primary-700 hover:bg-gray-50'
            }`}
          >
            About
          </a>

          <!-- Contact -->
          <a 
            href="/contact" 
            class={`px-4 py-2 rounded-lg font-medium transition-colors ${
              currentPath === '/contact'
                ? 'text-primary-700 bg-primary-50'
                : 'text-gray-700 hover:text-primary-700 hover:bg-gray-50'
            }`}
          >
            Contact
          </a>
        </div>

        <!-- CTA -->
        <div class="hidden lg:flex items-center gap-3">
          <a 
            href="/contact" 
            class="px-5 py-2.5 bg-primary-600 text-white font-semibold rounded-lg hover:bg-primary-700 transition-colors"
          >
            Get a Quote
          </a>
        </div>

        <!-- Mobile Menu Button -->
        <button 
          type="button" 
          class="lg:hidden p-2 rounded-lg text-gray-500 hover:bg-gray-100"
          id="mobile-menu-button"
          aria-controls="mobile-menu"
          aria-expanded="false"
        >
          <span class="sr-only">Open menu</span>
          <svg class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"/>
          </svg>
        </button>
      </div>
    </div>
  </nav>

  <!-- Mobile Menu -->
  <div class="hidden lg:hidden bg-white border-b border-gray-200" id="mobile-menu">
    <div class="px-4 py-4 space-y-2">
      <div class="border-b border-gray-100 pb-4 mb-4">
        <p class="text-xs font-semibold text-gray-400 uppercase tracking-wider mb-3">Products</p>
        <a href="/products/christmas-trees" class="flex items-center gap-3 px-3 py-2 rounded-lg hover:bg-gray-50">
          <TreeIcon class="text-primary-600" size={24} />
          <span class="font-medium text-gray-900">Christmas Trees</span>
        </a>
        <a href="/products/greenery" class="flex items-center gap-3 px-3 py-2 rounded-lg hover:bg-gray-50">
          <GreeneryIcon class="text-primary-600" size={24} />
          <span class="font-medium text-gray-900">Decorative Greenery</span>
        </a>
      </div>
      
      <a href="/services" class="block px-3 py-2 rounded-lg font-medium text-gray-900 hover:bg-gray-50">Services</a>
      <a href="/about" class="block px-3 py-2 rounded-lg font-medium text-gray-900 hover:bg-gray-50">About</a>
      <a href="/contact" class="block px-3 py-2 rounded-lg font-medium text-gray-900 hover:bg-gray-50">Contact</a>
      
      <div class="pt-4 border-t border-gray-100">
        <a href="/contact" class="block w-full px-4 py-3 bg-primary-600 text-white font-semibold rounded-lg text-center hover:bg-primary-700">
          Get a Quote
        </a>
      </div>
    </div>
  </div>
</header>

<script>
  const mobileMenuButton = document.getElementById('mobile-menu-button');
  const mobileMenu = document.getElementById('mobile-menu');
  
  mobileMenuButton?.addEventListener('click', () => {
    const isExpanded = mobileMenuButton.getAttribute('aria-expanded') === 'true';
    mobileMenuButton.setAttribute('aria-expanded', (!isExpanded).toString());
    mobileMenu?.classList.toggle('hidden');
  });
</script>
