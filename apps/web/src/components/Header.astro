---
import { BUSINESS_INFO } from '../constants/business'

const navItems = [
  { label: 'Home', href: '/' },
  { label: 'About Us', href: '/about' },
  { label: 'Our Trees', href: '/our-trees' },
  { label: 'Services', href: '/services' },
  { label: 'Contact', href: '/contact' },
]

const currentPath = Astro.url.pathname;
---

<nav class="bg-white border-b border-gray-200 sticky top-0 z-50" id="header-nav">
  <div class="max-w-screen-xl flex flex-wrap items-center justify-between mx-auto p-4">
    <!-- Logo -->
    <a href="/" class="flex items-center space-x-3">
      <span class="text-xl font-bold text-primary-700">Teglgaard Wood</span>
    </a>
    
    <!-- Right side: CTAs + Mobile menu -->
    <div class="flex items-center md:order-2">
      <!-- Email CTA -->
      <a 
        href={`mailto:${BUSINESS_INFO.email}`} 
        class="hidden sm:inline-flex items-center bg-gray-100 hover:bg-gray-200 text-gray-800 font-medium rounded-lg text-sm px-3 py-2 lg:px-4 lg:py-2.5 mr-2 transition-colors"
      >
        <svg class="w-4 h-4 me-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
        </svg>
        Email Us
      </a>
      
      <!-- Phone CTA -->
      <a 
        href={`tel:${BUSINESS_INFO.phoneRaw}`} 
        class="hidden sm:inline-flex items-center bg-primary-600 hover:bg-primary-700 text-white font-medium rounded-lg text-sm px-3 py-2 lg:px-4 lg:py-2.5 transition-colors"
      >
        <svg class="w-4 h-4 me-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
        </svg>
        <span class="hidden lg:inline">{BUSINESS_INFO.phoneDisplay}</span>
        <span class="lg:hidden">Call</span>
      </a>

      <!-- Mobile menu button -->
      <button 
        type="button" 
        class="inline-flex items-center p-2 w-10 h-10 justify-center text-sm text-gray-500 rounded-lg md:hidden hover:bg-gray-100 focus:outline-none focus:ring-2 focus:ring-gray-200 ml-2" 
        aria-controls="navbar-main" 
        aria-expanded="false"
        id="mobile-menu-button"
      >
        <span class="sr-only">Open main menu</span>
        <svg class="w-5 h-5" fill="none" viewBox="0 0 17 14">
          <path stroke="currentColor" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M1 1h15M1 7h15M1 13h15"/>
        </svg>
      </button>
    </div>
    
    <!-- Navigation links -->
    <div class="items-center justify-between hidden w-full md:flex md:w-auto md:order-1" id="navbar-main">
      <ul class="flex flex-col font-medium p-4 md:p-0 mt-4 border border-gray-100 rounded-lg bg-gray-50 md:space-x-8 md:flex-row md:mt-0 md:border-0 md:bg-transparent">
        {navItems.map((item) => (
          <li>
            <a 
              href={item.href} 
              class={`block py-2 px-3 rounded md:p-0 transition-colors ${
                currentPath === item.href 
                  ? 'text-primary-700 font-semibold' 
                  : 'text-gray-900 hover:text-primary-700'
              }`}
            >
              {item.label}
            </a>
          </li>
        ))}
        <!-- Mobile CTAs -->
        <li class="md:hidden mt-4 pt-4 border-t border-gray-200">
          <a 
            href={`mailto:${BUSINESS_INFO.email}`}
            class="block py-2 px-3 text-gray-600 font-medium"
          >
            Email: {BUSINESS_INFO.email}
          </a>
        </li>
        <li class="md:hidden">
          <a 
            href={`tel:${BUSINESS_INFO.phoneRaw}`}
            class="block py-2 px-3 text-primary-600 font-medium"
          >
            Call: {BUSINESS_INFO.phoneDisplay}
          </a>
        </li>
      </ul>
    </div>
  </div>
</nav>

<script>
  const mobileMenuButton = document.getElementById('mobile-menu-button');
  const mobileMenu = document.getElementById('navbar-main');
  
  mobileMenuButton?.addEventListener('click', () => {
    mobileMenu?.classList.toggle('hidden');
  });
</script>
