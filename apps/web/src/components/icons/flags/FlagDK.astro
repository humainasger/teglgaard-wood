---
interface Props {
  size?: number;
  class?: string;
}
const { size = 24, class: className = '' } = Astro.props;
const h = Math.round(size * 2 / 3);
---
<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 37 28" width={size} height={h} class:list={['inline-block rounded-sm', className]}>
  <rect width="37" height="28" fill="#C8102E"/>
  <rect x="12" width="4" height="28" fill="#fff"/>
  <rect y="12" width="37" height="4" fill="#fff"/>
</svg>
