---
interface Props {
  size?: number;
  class?: string;
}
const { size = 24, class: className = '' } = Astro.props;
---
<svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 5 3" width={size} height={size * 3 / 5} class:list={['inline-block rounded-sm', className]}>
  <rect width="5" height="3" fill="#FFCE00"/>
  <rect width="5" height="2" fill="#DD0000"/>
  <rect width="5" height="1" fill="#000"/>
</svg>
