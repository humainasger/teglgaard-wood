---
interface Props {
  class?: string
  size?: number
}

const { class: className = '', size = 24 } = Astro.props
---

<svg 
  class={className}
  width={size} 
  height={size} 
  viewBox="0 0 48 48" 
  fill="none" 
  xmlns="http://www.w3.org/2000/svg"
>
  <!-- Center person -->
  <circle cx="24" cy="16" r="6" fill="currentColor"/>
  <path d="M14 38c0-5.5 4.5-10 10-10s10 4.5 10 10" fill="currentColor" opacity="0.8"/>
  
  <!-- Left person -->
  <circle cx="10" cy="20" r="4" fill="currentColor" opacity="0.6"/>
  <path d="M2 36c0-4.4 3.6-8 8-8s8 3.6 8 8" fill="currentColor" opacity="0.5"/>
  
  <!-- Right person -->
  <circle cx="38" cy="20" r="4" fill="currentColor" opacity="0.6"/>
  <path d="M30 36c0-4.4 3.6-8 8-8s8 3.6 8 8" fill="currentColor" opacity="0.5"/>
</svg>
