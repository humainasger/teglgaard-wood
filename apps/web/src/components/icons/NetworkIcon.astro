---
interface Props {
  class?: string
  size?: number
}

const { class: className = '', size = 24 } = Astro.props
---

<svg 
  class={className}
  width={size} 
  height={size} 
  viewBox="0 0 48 48" 
  fill="none" 
  xmlns="http://www.w3.org/2000/svg"
>
  <!-- Center node -->
  <circle cx="24" cy="24" r="6" fill="currentColor"/>
  
  <!-- Outer nodes -->
  <circle cx="24" cy="8" r="4" fill="currentColor" opacity="0.7"/>
  <circle cx="40" cy="16" r="4" fill="currentColor" opacity="0.7"/>
  <circle cx="40" cy="32" r="4" fill="currentColor" opacity="0.7"/>
  <circle cx="24" cy="40" r="4" fill="currentColor" opacity="0.7"/>
  <circle cx="8" cy="32" r="4" fill="currentColor" opacity="0.7"/>
  <circle cx="8" cy="16" r="4" fill="currentColor" opacity="0.7"/>
  
  <!-- Connections -->
  <line x1="24" y1="18" x2="24" y2="12" stroke="currentColor" stroke-width="2" opacity="0.5"/>
  <line x1="29" y1="20" x2="36" y2="16" stroke="currentColor" stroke-width="2" opacity="0.5"/>
  <line x1="29" y1="28" x2="36" y2="32" stroke="currentColor" stroke-width="2" opacity="0.5"/>
  <line x1="24" y1="30" x2="24" y2="36" stroke="currentColor" stroke-width="2" opacity="0.5"/>
  <line x1="19" y1="28" x2="12" y2="32" stroke="currentColor" stroke-width="2" opacity="0.5"/>
  <line x1="19" y1="20" x2="12" y2="16" stroke="currentColor" stroke-width="2" opacity="0.5"/>
</svg>
