---
import { BUSINESS_INFO, SOCIAL_LINKS } from '../constants/business'
import { getLanguageFromURL, t, getLocalizedPath } from '../i18n'

const currentYear = new Date().getFullYear()
const lang = getLanguageFromURL(Astro.url);

const footerLinks = {
  products: [
    { label: t('nav.christmasTrees', lang), href: getLocalizedPath('/products/christmas-trees', lang) },
    { label: t('nav.greenery', lang), href: getLocalizedPath('/products/greenery', lang) },
  ],
  solutions: [
    { label: 'Garden Centers', href: getLocalizedPath('/solutions#garden-centers', lang) },
    { label: 'Supermarkets', href: getLocalizedPath('/solutions#supermarkets', lang) },
    { label: 'Distributors', href: getLocalizedPath('/solutions#distributors', lang) },
    { label: 'E-Commerce', href: getLocalizedPath('/solutions#ecommerce', lang) },
  ],
  company: [
    { label: t('nav.about', lang), href: getLocalizedPath('/about', lang) },
    { label: t('nav.services', lang), href: getLocalizedPath('/services', lang) },
    { label: t('nav.contact', lang), href: getLocalizedPath('/contact', lang) },
  ],
}
---

<footer class="bg-gray-900 text-white">
  <div class="mx-auto w-full max-w-screen-xl px-4 py-10 lg:py-16">
    <div class="md:flex md:justify-between gap-8">
      <!-- Brand -->
      <div class="mb-8 md:mb-0 max-w-sm">
        <a href={getLocalizedPath('/', lang)} class="flex items-center mb-4">
          <span class="text-2xl font-bold text-white">Teglgaard Wood</span>
        </a>
        <p class="text-gray-400 text-sm leading-relaxed">
          {t('footer.brandDescription', lang)}
        </p>

        <!-- Social -->
        {SOCIAL_LINKS.linkedin && (
          <div class="mt-4">
            <a
              href={SOCIAL_LINKS.linkedin}
              target="_blank"
              rel="noopener noreferrer"
              class="inline-flex items-center text-gray-400 hover:text-white transition-colors"
            >
              <svg class="w-5 h-5" fill="currentColor" viewBox="0 0 24 24">
                <path d="M19 0h-14c-2.761 0-5 2.239-5 5v14c0 2.761 2.239 5 5 5h14c2.762 0 5-2.239 5-5v-14c0-2.761-2.238-5-5-5zm-11 19h-3v-11h3v11zm-1.5-12.268c-.966 0-1.75-.79-1.75-1.764s.784-1.764 1.75-1.764 1.75.79 1.75 1.764-.783 1.764-1.75 1.764zm13.5 12.268h-3v-5.604c0-3.368-4-3.113-4 0v5.604h-3v-11h3v1.765c1.396-2.586 7-2.777 7 2.476v6.759z"/>
              </svg>
              <span class="ml-2 text-sm">LinkedIn</span>
            </a>
          </div>
        )}
      </div>

      <!-- Links -->
      <div class="grid grid-cols-2 gap-8 sm:gap-12 sm:grid-cols-3">
        <div>
          <h3 class="mb-4 text-sm font-semibold text-white uppercase tracking-wider">{t('footer.products', lang)}</h3>
          <ul class="text-gray-400 space-y-3">
            {footerLinks.products.map((link) => (
              <li>
                <a href={link.href} class="hover:text-white transition-colors">{link.label}</a>
              </li>
            ))}
          </ul>
        </div>
        <div>
          <h3 class="mb-4 text-sm font-semibold text-white uppercase tracking-wider">{t('footer.solutions', lang)}</h3>
          <ul class="text-gray-400 space-y-3">
            {footerLinks.solutions.map((link) => (
              <li>
                <a href={link.href} class="hover:text-white transition-colors">{link.label}</a>
              </li>
            ))}
          </ul>
        </div>
        <div>
          <h3 class="mb-4 text-sm font-semibold text-white uppercase tracking-wider">{t('footer.company', lang)}</h3>
          <ul class="text-gray-400 space-y-3">
            {footerLinks.company.map((link) => (
              <li>
                <a href={link.href} class="hover:text-white transition-colors">{link.label}</a>
              </li>
            ))}
          </ul>
        </div>
      </div>
    </div>

    <!-- Contact Bar -->
    <div class="mt-10 pt-8 border-t border-gray-800">
      <div class="flex flex-col md:flex-row md:items-center md:justify-between gap-6">
        <div class="flex flex-col sm:flex-row gap-4 sm:gap-8">
          <a
            href={`tel:${BUSINESS_INFO.phoneRaw}`}
            class="inline-flex items-center text-white hover:text-primary-400 transition-colors"
          >
            <svg class="w-5 h-5 me-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
            </svg>
            <span class="font-medium">{BUSINESS_INFO.phoneDisplay}</span>
          </a>
          <a
            href={`mailto:${BUSINESS_INFO.email}`}
            class="inline-flex items-center text-gray-400 hover:text-white transition-colors"
          >
            <svg class="w-5 h-5 me-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
            </svg>
            {BUSINESS_INFO.email}
          </a>
        </div>
        <address class="text-gray-500 text-sm not-italic">
          {BUSINESS_INFO.address.street}, {BUSINESS_INFO.address.postalCode} {BUSINESS_INFO.address.city}, {BUSINESS_INFO.address.country}
        </address>
      </div>
    </div>

    <!-- Bottom Bar -->
    <div class="mt-8 pt-6 border-t border-gray-800 flex flex-col sm:flex-row sm:items-center sm:justify-between gap-4">
      <div class="text-sm text-gray-500">
        Â© {currentYear} {BUSINESS_INFO.name} ({BUSINESS_INFO.legalName}). CVR: {BUSINESS_INFO.cvr}
      </div>
      <div class="flex gap-6 text-sm text-gray-500">
        <a href={getLocalizedPath('/privacy', lang)} class="hover:text-white transition-colors">{t('footer.legal.privacy', lang)}</a>
        <a href={getLocalizedPath('/terms', lang)} class="hover:text-white transition-colors">{t('footer.legal.terms', lang)}</a>
        <a href={getLocalizedPath('/cookies', lang)} class="hover:text-white transition-colors">{t('footer.legal.cookies', lang)}</a>
      </div>
    </div>
  </div>
</footer>
