---
import { BUSINESS_INFO } from '../constants/business'

const currentYear = new Date().getFullYear()

const footerLinks = {
  company: [
    { label: 'About Us', href: '/about' },
    { label: 'Our Story', href: '/about#story' },
  ],
  services: [
    { label: 'Our Trees', href: '/our-trees' },
    { label: 'Quality Standards', href: '/services#quality' },
    { label: 'Delivery', href: '/services#delivery' },
  ],
}
---

<footer class="bg-gray-50 border-t border-gray-200">
  <div class="mx-auto w-full max-w-screen-xl p-4 py-6 lg:py-8">
    <div class="md:flex md:justify-between">
      <div class="mb-6 md:mb-0">
        <a href="/" class="flex items-center">
          <span class="text-xl font-bold text-primary-700">Teglgaard Wood</span>
        </a>
        <p class="mt-4 text-sm text-gray-600 max-w-xs">
          Premium Danish Christmas trees since 1976. Your trusted wholesale trading partner.
        </p>
      </div>
      <div class="grid grid-cols-2 gap-8 sm:gap-6 sm:grid-cols-3">
        <div>
          <h2 class="mb-6 text-sm font-semibold text-gray-900 uppercase">Company</h2>
          <ul class="text-gray-600 font-medium space-y-4">
            {footerLinks.company.map((link) => (
              <li>
                <a href={link.href} class="hover:text-primary-600 hover:underline">{link.label}</a>
              </li>
            ))}
          </ul>
        </div>
        <div>
          <h2 class="mb-6 text-sm font-semibold text-gray-900 uppercase">Services</h2>
          <ul class="text-gray-600 font-medium space-y-4">
            {footerLinks.services.map((link) => (
              <li>
                <a href={link.href} class="hover:text-primary-600 hover:underline">{link.label}</a>
              </li>
            ))}
          </ul>
        </div>
        <div>
          <h2 class="mb-6 text-sm font-semibold text-gray-900 uppercase">Contact</h2>
          <ul class="text-gray-600 font-medium space-y-4">
            <li>
              <a href={`tel:${BUSINESS_INFO.phoneRaw}`} class="hover:text-primary-600 hover:underline flex items-center">
                <svg class="w-4 h-4 me-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
                </svg>
                {BUSINESS_INFO.phoneDisplay}
              </a>
            </li>
            <li>
              <a href={`mailto:${BUSINESS_INFO.email}`} class="hover:text-primary-600 hover:underline flex items-center">
                <svg class="w-4 h-4 me-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
                </svg>
                {BUSINESS_INFO.email}
              </a>
            </li>
            <li class="text-gray-500 text-sm">
              {BUSINESS_INFO.address.street}<br />
              {BUSINESS_INFO.address.postalCode} {BUSINESS_INFO.address.city}<br />
              {BUSINESS_INFO.address.country}
            </li>
          </ul>
        </div>
      </div>
    </div>
    <hr class="my-6 border-gray-200 sm:mx-auto lg:my-8" />
    <div class="sm:flex sm:items-center sm:justify-between">
      <span class="text-sm text-gray-500 sm:text-center">
        © {currentYear} <a href="/" class="hover:underline">{BUSINESS_INFO.name}</a> ({BUSINESS_INFO.legalName}). All Rights Reserved.
      </span>
      <div class="flex mt-4 sm:mt-0">
        <span class="text-sm text-gray-500">
          Est. {BUSINESS_INFO.founded} · {BUSINESS_INFO.yearsFounded}+ years of expertise
        </span>
      </div>
    </div>
  </div>
</footer>
