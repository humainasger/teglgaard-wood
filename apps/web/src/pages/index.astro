---
import Layout from '../layouts/Layout.astro'
import Counter from '../components/Counter.tsx'
import ScrollReveal from '../components/ScrollReveal.tsx'
import TreeIcon from '../components/icons/TreeIcon.astro'
import GreeneryIcon from '../components/icons/GreeneryIcon.astro'
import TruckIcon from '../components/icons/TruckIcon.astro'
import QualityIcon from '../components/icons/QualityIcon.astro'
import NetworkIcon from '../components/icons/NetworkIcon.astro'
import TeamIcon from '../components/icons/TeamIcon.astro'
import { BUSINESS_INFO } from '../constants/business'

const markets = BUSINESS_INFO.primaryMarkets
---

<Layout title="Wholesale Christmas Trees & Decorative Greenery">
  <!-- Hero Section with Video Background -->
  <section class="relative min-h-[90vh] flex items-center overflow-hidden">
    <!-- Video Background -->
    <video 
      autoplay 
      muted 
      loop 
      playsinline
      poster="/images/hero-fallback.jpg"
      class="absolute inset-0 w-full h-full object-cover"
    >
      <source src="/videos/hero-trees.mp4" type="video/mp4" />
    </video>
    
    <!-- Fallback Image (shows if video fails or for static export) -->
    <div 
      class="absolute inset-0 bg-cover bg-center"
      style="background-image: url('/images/hero-fallback.jpg');"
    ></div>
    
    <!-- Overlay -->
    <div class="absolute inset-0 bg-gradient-to-r from-primary-900/90 via-primary-800/80 to-primary-700/70"></div>
    
    <!-- Content -->
    <div class="relative max-w-screen-xl mx-auto px-4 py-20 lg:py-32 w-full">
      <div class="max-w-3xl">
        <div class="inline-flex items-center gap-2 bg-white/10 backdrop-blur-sm rounded-full px-4 py-2 mb-8">
          <span class="w-2 h-2 bg-green-400 rounded-full animate-pulse"></span>
          <span class="text-white/90 text-sm font-medium">Now booking for Season 2026</span>
        </div>
        
        <h1 class="text-5xl md:text-6xl lg:text-7xl font-bold text-white leading-[1.1] mb-8">
          Wholesale<br />
          Christmas Trees<br />
          <span class="text-primary-300">&amp; Greenery</span>
        </h1>
        
        <p class="text-xl lg:text-2xl text-white/80 mb-10 max-w-2xl leading-relaxed">
          {BUSINESS_INFO.stats.treesAnnually} trees annually. Production team in Denmark.
          Delivering to retailers across Europe since 1976.
        </p>
        
        <div class="flex flex-col sm:flex-row gap-4 mb-16">
          <a 
            href="/products" 
            class="inline-flex justify-center items-center px-8 py-4 bg-white text-primary-700 font-semibold rounded-xl hover:bg-gray-100 transition-all hover:shadow-lg text-lg"
          >
            View Products
            <svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3"></path>
            </svg>
          </a>
          <a 
            href="/contact" 
            class="inline-flex justify-center items-center px-8 py-4 border-2 border-white/80 text-white font-semibold rounded-xl hover:bg-white hover:text-primary-700 transition-all text-lg"
          >
            Request Quote
          </a>
        </div>
        
        <!-- Trust Stats -->
        <div class="flex flex-wrap gap-8 lg:gap-12">
          <div>
            <div class="text-4xl lg:text-5xl font-bold text-white">{BUSINESS_INFO.stats.treesAnnually}</div>
            <div class="text-white/60 text-sm mt-1">trees annually</div>
          </div>
          <div>
            <div class="text-4xl lg:text-5xl font-bold text-white">50+</div>
            <div class="text-white/60 text-sm mt-1">years experience</div>
          </div>
          <div>
            <div class="text-4xl lg:text-5xl font-bold text-white">6+</div>
            <div class="text-white/60 text-sm mt-1">European markets</div>
          </div>
        </div>
      </div>
    </div>
    
    <!-- Scroll Indicator -->
    <div class="absolute bottom-8 left-1/2 -translate-x-1/2 text-white/50 animate-bounce">
      <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3"></path>
      </svg>
    </div>
  </section>

  <!-- Products Section -->
  <section class="bg-white py-24 lg:py-32">
    <div class="max-w-screen-xl mx-auto px-4">
      <div class="text-center mb-16">
        <span class="inline-block text-primary-600 font-semibold text-sm uppercase tracking-wider mb-4">Our Products</span>
        <h2 class="text-4xl lg:text-5xl font-bold text-gray-900 mb-6">What We Supply</h2>
        <p class="text-xl text-gray-600 max-w-2xl mx-auto">
          Premium Christmas trees and fresh decorative greenery for retailers across Europe.
        </p>
      </div>
      
      <div class="grid md:grid-cols-2 gap-8 lg:gap-12 max-w-5xl mx-auto">
        <!-- Christmas Trees Card -->
        <ScrollReveal client:visible delay={0}>
          <a href="/products/christmas-trees" class="group block h-full">
            <div class="relative bg-gray-50 rounded-3xl overflow-hidden h-full border border-gray-100 hover:border-primary-200 transition-all hover:shadow-2xl">
              <!-- Image Placeholder -->
              <div class="aspect-[4/3] bg-gradient-to-br from-primary-100 to-primary-50 flex items-center justify-center">
                <img 
                  src="/images/products-trees.jpg" 
                  alt="Christmas Trees" 
                  class="w-full h-full object-cover"
                  onerror="this.style.display='none'; this.nextElementSibling.style.display='flex';"
                />
                <div class="hidden items-center justify-center absolute inset-0">
                  <TreeIcon class="text-primary-200" size={120} />
                </div>
              </div>
              
              <div class="p-8 lg:p-10">
                <h3 class="text-2xl lg:text-3xl font-bold text-gray-900 mb-4 group-hover:text-primary-700 transition-colors">
                  Christmas Trees
                </h3>
                <p class="text-gray-600 mb-6 text-lg">
                  Nordmann Fir, Noble Fir, Fraser Fir, Norway Spruce. All sizes from 1m to 7m+.
                </p>
                <ul class="text-gray-500 space-y-2 mb-8">
                  <li class="flex items-center gap-2">
                    <svg class="w-5 h-5 text-primary-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                    </svg>
                    Premium, A-Grade &amp; Standard
                  </li>
                  <li class="flex items-center gap-2">
                    <svg class="w-5 h-5 text-primary-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                    </svg>
                    Netted &amp; palletized
                  </li>
                  <li class="flex items-center gap-2">
                    <svg class="w-5 h-5 text-primary-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                    </svg>
                    Private label available
                  </li>
                </ul>
                <span class="inline-flex items-center text-primary-600 font-semibold text-lg group-hover:gap-3 gap-2 transition-all">
                  View Christmas Trees
                  <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3"></path>
                  </svg>
                </span>
              </div>
            </div>
          </a>
        </ScrollReveal>

        <!-- Greenery Card -->
        <ScrollReveal client:visible delay={150}>
          <a href="/products/greenery" class="group block h-full">
            <div class="relative bg-gray-50 rounded-3xl overflow-hidden h-full border border-gray-100 hover:border-primary-200 transition-all hover:shadow-2xl">
              <!-- Image Placeholder -->
              <div class="aspect-[4/3] bg-gradient-to-br from-primary-100 to-primary-50 flex items-center justify-center">
                <img 
                  src="/images/products-greenery.jpg" 
                  alt="Decorative Greenery" 
                  class="w-full h-full object-cover"
                  onerror="this.style.display='none'; this.nextElementSibling.style.display='flex';"
                />
                <div class="hidden items-center justify-center absolute inset-0">
                  <GreeneryIcon class="text-primary-200" size={120} />
                </div>
              </div>
              
              <div class="p-8 lg:p-10">
                <h3 class="text-2xl lg:text-3xl font-bold text-gray-900 mb-4 group-hover:text-primary-700 transition-colors">
                  Decorative Greenery
                </h3>
                <p class="text-gray-600 mb-6 text-lg">
                  Noble Fir, Nordmann, Cypress varieties, Spruce. Fresh-cut for the holiday season.
                </p>
                <ul class="text-gray-500 space-y-2 mb-8">
                  <li class="flex items-center gap-2">
                    <svg class="w-5 h-5 text-primary-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                    </svg>
                    Wreaths &amp; decorations
                  </li>
                  <li class="flex items-center gap-2">
                    <svg class="w-5 h-5 text-primary-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                    </svg>
                    Cemetery arrangements
                  </li>
                  <li class="flex items-center gap-2">
                    <svg class="w-5 h-5 text-primary-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                    </svg>
                    Commercial decorating
                  </li>
                </ul>
                <span class="inline-flex items-center text-primary-600 font-semibold text-lg group-hover:gap-3 gap-2 transition-all">
                  View Greenery
                  <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3"></path>
                  </svg>
                </span>
              </div>
            </div>
          </a>
        </ScrollReveal>
      </div>
    </div>
  </section>

  <!-- Why Teglgaard Wood Section -->
  <section class="bg-gray-50 py-24 lg:py-32">
    <div class="max-w-screen-xl mx-auto px-4">
      <div class="text-center mb-16">
        <span class="inline-block text-primary-600 font-semibold text-sm uppercase tracking-wider mb-4">Why Choose Us</span>
        <h2 class="text-4xl lg:text-5xl font-bold text-gray-900 mb-6">Why Teglgaard Wood</h2>
        <p class="text-xl text-gray-600 max-w-2xl mx-auto">
          Your professional sourcing partner with production capabilities and European reach.
        </p>
      </div>
      
      <div class="grid sm:grid-cols-2 lg:grid-cols-4 gap-8 lg:gap-10">
        <ScrollReveal client:visible delay={0}>
          <div class="bg-white rounded-2xl p-8 text-center shadow-sm hover:shadow-lg transition-shadow">
            <div class="w-20 h-20 bg-primary-100 rounded-2xl flex items-center justify-center mx-auto mb-6">
              <TeamIcon class="text-primary-600" size={44} />
            </div>
            <h3 class="text-xl font-bold text-gray-900 mb-3">Production Team</h3>
            <p class="text-gray-600">
              Experienced team on the ground in Denmark. {BUSINESS_INFO.stats.seasonalWorkers} seasonal workers for grading and preparation.
            </p>
          </div>
        </ScrollReveal>

        <ScrollReveal client:visible delay={100}>
          <div class="bg-white rounded-2xl p-8 text-center shadow-sm hover:shadow-lg transition-shadow">
            <div class="w-20 h-20 bg-primary-100 rounded-2xl flex items-center justify-center mx-auto mb-6">
              <NetworkIcon class="text-primary-600" size={44} />
            </div>
            <h3 class="text-xl font-bold text-gray-900 mb-3">European Network</h3>
            <p class="text-gray-600">
              Growers across Europe. We source the right trees for your market, not just from Denmark.
            </p>
          </div>
        </ScrollReveal>

        <ScrollReveal client:visible delay={200}>
          <div class="bg-white rounded-2xl p-8 text-center shadow-sm hover:shadow-lg transition-shadow">
            <div class="w-20 h-20 bg-primary-100 rounded-2xl flex items-center justify-center mx-auto mb-6">
              <TruckIcon class="text-primary-600" size={44} />
            </div>
            <h3 class="text-xl font-bold text-gray-900 mb-3">Reliable Logistics</h3>
            <p class="text-gray-600">
              Best-in-class logistics partners. Full truck loads, mixed loads, day-to-day delivery.
            </p>
          </div>
        </ScrollReveal>

        <ScrollReveal client:visible delay={300}>
          <div class="bg-white rounded-2xl p-8 text-center shadow-sm hover:shadow-lg transition-shadow">
            <div class="w-20 h-20 bg-primary-100 rounded-2xl flex items-center justify-center mx-auto mb-6">
              <QualityIcon class="text-primary-600" size={44} />
            </div>
            <h3 class="text-xl font-bold text-gray-900 mb-3">50 Years Experience</h3>
            <p class="text-gray-600">
              Since 1976. {BUSINESS_INFO.stats.totalExported} trees exported. Deep industry knowledge.
            </p>
          </div>
        </ScrollReveal>
      </div>
    </div>
  </section>

  <!-- Delivery Coverage Section -->
  <section class="bg-white py-24 lg:py-32">
    <div class="max-w-screen-xl mx-auto px-4">
      <div class="text-center mb-16">
        <span class="inline-block text-primary-600 font-semibold text-sm uppercase tracking-wider mb-4">Delivery</span>
        <h2 class="text-4xl lg:text-5xl font-bold text-gray-900 mb-6">Delivering Across Europe</h2>
        <p class="text-xl text-gray-600 max-w-2xl mx-auto">
          We supply garden centers, supermarket chains, and distributors in key European markets.
        </p>
      </div>
      
      <!-- Market Flags -->
      <div class="flex flex-wrap justify-center gap-4 lg:gap-6 mb-16">
        {markets.map((market) => (
          <div class="flex items-center bg-gray-50 rounded-xl px-6 py-4 hover:bg-primary-50 transition-colors">
            <span class="text-4xl mr-4">
              {market === 'Germany' && 'ðŸ‡©ðŸ‡ª'}
              {market === 'France' && 'ðŸ‡«ðŸ‡·'}
              {market === 'United Kingdom' && 'ðŸ‡¬ðŸ‡§'}
              {market === 'Netherlands' && 'ðŸ‡³ðŸ‡±'}
              {market === 'Belgium' && 'ðŸ‡§ðŸ‡ª'}
              {market === 'Denmark' && 'ðŸ‡©ðŸ‡°'}
            </span>
            <span class="font-semibold text-gray-700 text-lg">{market}</span>
          </div>
        ))}
      </div>
      
      <!-- Delivery Features -->
      <div class="flex flex-wrap justify-center gap-6 lg:gap-10 text-gray-600">
        <div class="flex items-center gap-3 bg-gray-50 rounded-full px-6 py-3">
          <svg class="w-6 h-6 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
          </svg>
          <span class="font-medium">Full truck loads</span>
        </div>
        <div class="flex items-center gap-3 bg-gray-50 rounded-full px-6 py-3">
          <svg class="w-6 h-6 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
          </svg>
          <span class="font-medium">Mixed loads</span>
        </div>
        <div class="flex items-center gap-3 bg-gray-50 rounded-full px-6 py-3">
          <svg class="w-6 h-6 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
          </svg>
          <span class="font-medium">Day-to-day delivery</span>
        </div>
        <div class="flex items-center gap-3 bg-gray-50 rounded-full px-6 py-3">
          <svg class="w-6 h-6 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
          </svg>
          <span class="font-medium">Flexible scheduling</span>
        </div>
      </div>
    </div>
  </section>

  <!-- Contact CTA Section -->
  <section class="bg-primary-800 py-24 lg:py-32 relative overflow-hidden">
    <!-- Background Pattern -->
    <div class="absolute inset-0 opacity-10">
      <div class="absolute top-10 left-10">
        <TreeIcon class="text-white" size={200} />
      </div>
      <div class="absolute bottom-10 right-10">
        <TreeIcon class="text-white" size={150} />
      </div>
      <div class="absolute top-1/2 left-1/3">
        <GreeneryIcon class="text-white" size={100} />
      </div>
    </div>
    
    <div class="max-w-screen-xl mx-auto px-4 relative">
      <div class="max-w-3xl mx-auto text-center">
        <span class="inline-block text-primary-300 font-semibold text-sm uppercase tracking-wider mb-4">Get Started</span>
        <h2 class="text-4xl lg:text-5xl font-bold text-white mb-6">
          Ready to discuss your requirements?
        </h2>
        <p class="text-xl text-primary-200 mb-10">
          Whether you need 1,000 trees or 50,000+, we're ready to help.
          Call us directly or request a quote online.
        </p>
        
        <div class="flex flex-col sm:flex-row gap-4 justify-center items-center mb-10">
          <a 
            href={`tel:${BUSINESS_INFO.phoneRaw}`}
            class="inline-flex items-center px-8 py-4 bg-white text-primary-700 font-semibold rounded-xl hover:bg-gray-100 transition-colors text-lg"
          >
            <svg class="w-6 h-6 mr-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
            </svg>
            {BUSINESS_INFO.phoneDisplay}
          </a>
          <span class="text-primary-400 text-lg">or</span>
          <a 
            href="/contact"
            class="inline-flex items-center px-8 py-4 border-2 border-white text-white font-semibold rounded-xl hover:bg-white hover:text-primary-700 transition-colors text-lg"
          >
            Get a Quote Online
            <svg class="w-5 h-5 ml-3" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3"></path>
            </svg>
          </a>
        </div>
        
        <p class="text-primary-300 text-sm">
          Response within 24 hours. Usually same business day.
        </p>
      </div>
    </div>
  </section>
</Layout>
