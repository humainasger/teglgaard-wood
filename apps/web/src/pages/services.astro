---
import Layout from '../layouts/Layout.astro'
import { BUSINESS_INFO } from '../constants/business'
import { ProcessStepsScroll } from '../components/motion/ProcessStepsScroll'
import { CapabilitiesGrid } from '../components/motion/CapabilitiesGrid'

const markets = BUSINESS_INFO.primaryMarkets

