---
import Layout from '../../../layouts/Layout.astro'
import { BUSINESS_INFO, GREENERY_PRODUCTS } from '../../../constants/business'
import { t } from '../../../i18n'
import type { Locale } from '../../../i18n'

const lang: Locale = 'de'
---

<Layout
  title={t('seo.greenery.title', lang)}
  description={t('seo.greenery.description', lang)}
>
  <!-- Hero -->
  <section class="relative py-24 lg:py-32 overflow-hidden">
    <!-- Background Image -->
    <div class="absolute inset-0">
      <picture>
        <source srcset="/images/products-greenery.webp" type="image/webp" />
        <img 
          src="/images/products-greenery.jpg" 
          alt="Fresh decorative greenery" 
          class="w-full h-full object-cover"
        />
      </picture>
      <div class="absolute inset-0 bg-gradient-to-r from-primary-900/90 via-primary-800/80 to-primary-700/60"></div>
    </div>
    
    <div class="relative max-w-screen-xl mx-auto px-4">
      <nav class="mb-6">
        <ol class="flex items-center text-sm text-primary-200">
          <li><a href="/" class="hover:text-white">Home</a></li>
          <li class="mx-2">/</li>
          <li><a href="/products" class="hover:text-white">Products</a></li>
          <li class="mx-2">/</li>
          <li class="text-white">Decorative Greenery</li>
        </ol>
      </nav>
      <div class="max-w-3xl">
        <h1 class="text-4xl lg:text-5xl font-bold text-white mb-6">
          Fresh Decorative Greenery
        </h1>
        <p class="text-xl text-primary-100">
          Premium branches and foliage for wreaths, arrangements, and commercial decorating.
          Fresh-cut from our network of European growers.
        </p>
      </div>
    </div>
  </section>

  <!-- Products Section -->
  <section class="bg-white py-16 lg:py-24">
    <div class="max-w-screen-xl mx-auto px-4">
      <div class="text-center mb-12">
        <h2 class="text-3xl font-bold text-gray-900 mb-4">Products Available</h2>
        <p class="text-lg text-gray-600 max-w-2xl mx-auto">
          High-quality decorative greenery for the holiday season.
          All products sourced fresh and delivered with care.
        </p>
      </div>

      <div class="grid md:grid-cols-2 gap-8 max-w-4xl mx-auto">
        {Object.entries(GREENERY_PRODUCTS).map(([key, product]) => (
          <div class="bg-gray-50 rounded-xl p-6 lg:p-8">
            <h3 class="text-xl font-bold text-gray-900 mb-3">{product.name}</h3>
            <p class="text-gray-600 mb-4">{product.description}</p>
            {'varieties' in product && product.varieties && (
              <div>
                <h4 class="text-sm font-semibold text-gray-500 uppercase tracking-wide mb-2">Varieties</h4>
                <div class="flex flex-wrap gap-2">
                  {product.varieties.map((variety) => (
                    <span class="bg-white px-3 py-1 rounded text-sm text-gray-700 border border-gray-200">
                      {variety}
                    </span>
                  ))}
                </div>
              </div>
            )}
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Applications -->
  <section class="bg-gray-50 py-16 lg:py-24">
    <div class="max-w-screen-xl mx-auto px-4">
      <div class="text-center mb-12">
        <h2 class="text-3xl font-bold text-gray-900 mb-4">Applications</h2>
        <p class="text-lg text-gray-600 max-w-2xl mx-auto">
          Our greenery is used by florists, garden centers, and commercial decorators across Europe.
        </p>
      </div>

      <div class="grid md:grid-cols-3 gap-8 max-w-5xl mx-auto">
        <!-- Wreaths -->
        <div class="bg-white rounded-xl overflow-hidden shadow-sm hover:shadow-lg transition-shadow">
          <div class="aspect-[4/3] relative overflow-hidden">
            <picture>
              <source srcset="/images/greenery/wreaths.webp" type="image/webp" />
              <img 
                src="/images/greenery/wreaths.jpg" 
                alt="Christmas wreath made with fresh Noble fir" 
                class="w-full h-full object-cover"
                loading="lazy"
              />
            </picture>
          </div>
          <div class="p-6">
            <h3 class="text-lg font-bold text-gray-900 mb-2">Wreaths & Decorations</h3>
            <p class="text-gray-600 text-sm">
              Premium foliage for handcrafted wreaths, garlands, and holiday decorations.
            </p>
          </div>
        </div>

        <!-- Cemetery -->
        <div class="bg-white rounded-xl overflow-hidden shadow-sm hover:shadow-lg transition-shadow">
          <div class="aspect-[4/3] relative overflow-hidden">
            <picture>
              <source srcset="/images/greenery/cemetery.webp" type="image/webp" />
              <img 
                src="/images/greenery/cemetery.jpg" 
                alt="Traditional cemetery grave decoration" 
                class="w-full h-full object-cover"
                loading="lazy"
              />
            </picture>
          </div>
          <div class="p-6">
            <h3 class="text-lg font-bold text-gray-900 mb-2">Cemetery Arrangements</h3>
            <p class="text-gray-600 text-sm">
              Traditional and modern grave decorations. Popular in Central Europe markets.
            </p>
          </div>
        </div>

        <!-- Commercial -->
        <div class="bg-white rounded-xl overflow-hidden shadow-sm hover:shadow-lg transition-shadow">
          <div class="aspect-[4/3] relative overflow-hidden">
            <picture>
              <source srcset="/images/greenery/commercial.webp" type="image/webp" />
              <img 
                src="/images/greenery/commercial.jpg" 
                alt="Grand hotel lobby decorated with Christmas greenery" 
                class="w-full h-full object-cover"
                loading="lazy"
              />
            </picture>
          </div>
          <div class="p-6">
            <h3 class="text-lg font-bold text-gray-900 mb-2">Commercial Decorating</h3>
            <p class="text-gray-600 text-sm">
              Large-scale greenery for hotels, shopping centers, and corporate events.
            </p>
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Packaging -->
  <section class="bg-white py-16 lg:py-24">
    <div class="max-w-screen-xl mx-auto px-4">
      <div class="text-center mb-12">
        <h2 class="text-3xl font-bold text-gray-900 mb-4">Packaging Options</h2>
        <p class="text-lg text-gray-600 max-w-2xl mx-auto">
          Flexible packaging to suit your needs, from small bundles to full pallets.
        </p>
      </div>

      <div class="grid sm:grid-cols-2 gap-8 max-w-3xl mx-auto">
        <div class="bg-gray-50 rounded-xl p-6 text-center">
          <div class="w-12 h-12 bg-primary-100 rounded-lg flex items-center justify-center mx-auto mb-4">
            <svg class="w-6 h-6 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4"></path>
            </svg>
          </div>
          <h3 class="font-semibold text-gray-900 mb-2">Bundles (kg)</h3>
          <p class="text-sm text-gray-600">
            Standard bundle weights for easy handling. Consistent quality in every bundle.
          </p>
        </div>

        <div class="bg-gray-50 rounded-xl p-6 text-center">
          <div class="w-12 h-12 bg-primary-100 rounded-lg flex items-center justify-center mx-auto mb-4">
            <svg class="w-6 h-6 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 7v10c0 2.21 3.582 4 8 4s8-1.79 8-4V7M4 7c0 2.21 3.582 4 8 4s8-1.79 8-4M4 7c0-2.21 3.582-4 8-4s8 1.79 8 4"></path>
            </svg>
          </div>
          <h3 class="font-semibold text-gray-900 mb-2">Full Pallets</h3>
          <p class="text-sm text-gray-600">
            Bulk orders on pallets. Efficient loading and transport for large volumes.
          </p>
        </div>
      </div>
    </div>
  </section>

  <!-- CTA -->
  <section class="bg-primary-700 py-16 lg:py-20">
    <div class="max-w-screen-xl mx-auto px-4 text-center">
      <h2 class="text-3xl font-bold text-white mb-4">Request Pricing</h2>
      <p class="text-lg text-primary-100 mb-8 max-w-2xl mx-auto">
        Let us know your greenery requirements and we'll prepare a competitive quote.
      </p>
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <a 
          href="/contact" 
          class="inline-flex items-center justify-center px-8 py-4 bg-white text-primary-700 font-semibold rounded-lg hover:bg-gray-100 transition-colors"
        >
          Get a Quote
        </a>
        <a 
          href={`tel:${BUSINESS_INFO.phoneRaw}`}
          class="inline-flex items-center justify-center px-8 py-4 border-2 border-white text-white font-semibold rounded-lg hover:bg-white hover:text-primary-700 transition-colors"
        >
          <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
          </svg>
          Call {BUSINESS_INFO.phoneDisplay}
        </a>
      </div>
    </div>
  </section>
</Layout>
