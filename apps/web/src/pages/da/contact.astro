---
import Layout from '../../layouts/Layout.astro'
import ContactForm from '../../components/ContactForm.tsx'
import ContactTeam from '../../components/ContactTeam.astro'
import { BUSINESS_INFO } from '../../constants/business'
import { t } from '../../i18n'
import type { Locale } from '../../i18n'

const lang: Locale = 'da'
---

<Layout
  title={t('seo.contact.title', lang)}
  description={t('seo.contact.description', lang)}
>
  <!-- Hero -->
  <section class="bg-gradient-to-br from-primary-700 to-primary-600 py-16 lg:py-20">
    <div class="max-w-screen-xl mx-auto px-4">
      <div class="max-w-3xl">
        <h1 class="text-4xl lg:text-5xl font-bold text-white mb-6">{t('contact.hero.title', lang)}</h1>
        <p class="text-xl text-primary-100">
          {t('contact.hero.subtitle', lang)}
        </p>
      </div>
    </div>
  </section>

  <!-- Talk to Us Directly - Gold Section -->
  <ContactTeam variant="full" />

  <!-- Contact Info + Form -->
  <section class="bg-white py-16 lg:py-24">
    <div class="max-w-screen-xl mx-auto px-4">
      <div class="text-center mb-12">
        <span class="inline-block text-primary-600 font-semibold text-sm uppercase tracking-wider mb-4">Quote Request</span>
        <h2 class="text-3xl lg:text-4xl font-bold text-gray-900 mb-4">{t('contact.form.title', lang)}</h2>
        <p class="text-lg text-gray-600 max-w-2xl mx-auto">
          Tell us about your requirements and we'll prepare a competitive quote within 24 hours.
        </p>
      </div>

      <div class="grid lg:grid-cols-3 gap-12 lg:gap-16">
        <!-- Contact Info -->
        <div class="lg:col-span-1">
          <h3 class="text-xl font-bold text-gray-900 mb-6">Contact Details</h3>
          
          <!-- Phone - Primary -->
          <div class="mb-6">
            <div class="flex items-center">
              <div class="w-10 h-10 bg-primary-100 rounded-lg flex items-center justify-center mr-4">
                <svg class="w-5 h-5 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
                </svg>
              </div>
              <div>
                <p class="text-sm text-gray-500">Phone</p>
                <a href={`tel:${BUSINESS_INFO.phoneRaw}`} class="text-lg font-semibold text-gray-900 hover:text-primary-600">
                  {BUSINESS_INFO.phoneDisplay}
                </a>
              </div>
            </div>
          </div>

          <!-- Email -->
          <div class="mb-6">
            <div class="flex items-center">
              <div class="w-10 h-10 bg-primary-100 rounded-lg flex items-center justify-center mr-4">
                <svg class="w-5 h-5 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
                </svg>
              </div>
              <div>
                <p class="text-sm text-gray-500">General Enquiries</p>
                <a href={`mailto:${BUSINESS_INFO.email}`} class="text-gray-900 hover:text-primary-600">
                  {BUSINESS_INFO.email}
                </a>
              </div>
            </div>
          </div>

          <!-- Address -->
          <div class="mb-6">
            <div class="flex items-start">
              <div class="w-10 h-10 bg-primary-100 rounded-lg flex items-center justify-center mr-4 flex-shrink-0">
                <svg class="w-5 h-5 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
                </svg>
              </div>
              <div>
                <p class="text-sm text-gray-500">Address</p>
                <p class="text-gray-900">
                  {BUSINESS_INFO.address.street}<br />
                  {BUSINESS_INFO.address.postalCode} {BUSINESS_INFO.address.city}<br />
                  {BUSINESS_INFO.address.country}
                </p>
              </div>
            </div>
          </div>

          <!-- Response Time -->
          <div class="bg-primary-50 rounded-xl p-4">
            <div class="flex items-start gap-3">
              <svg class="w-5 h-5 text-primary-600 mt-0.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
              <div>
                <p class="font-medium text-primary-800">Response within 24 hours</p>
                <p class="text-sm text-primary-700">Usually same business day</p>
              </div>
            </div>
          </div>
        </div>

        <!-- Form -->
        <div class="lg:col-span-2">
          <div class="bg-gray-50 rounded-2xl p-6 lg:p-10">
            <ContactForm client:load />
          </div>
        </div>
      </div>
    </div>
  </section>

  <!-- Map -->
  <section class="bg-gray-100">
    <div class="max-w-screen-xl mx-auto px-4 py-12">
      <h3 class="text-xl font-bold text-gray-900 mb-6 text-center">Find Us</h3>
      <div class="rounded-2xl overflow-hidden shadow-lg h-96">
        <iframe 
          src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d2222.8!2d10.2!3d55.5!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x0%3A0x0!2zNTXCsDMwJzAwLjAiTiAxMMKwMTInMDAuMCJF!5e0!3m2!1sen!2sdk!4v1234567890"
          width="100%" 
          height="100%" 
          style="border:0;" 
          allowfullscreen="" 
          loading="lazy" 
          referrerpolicy="no-referrer-when-downgrade"
          title="Teglgaard Wood Location"
        ></iframe>
      </div>
    </div>
  </section>
</Layout>
