---
import Layout from '../../layouts/Layout.astro'
import Counter from '../../components/Counter.tsx'
import ScrollReveal from '../../components/ScrollReveal.tsx'
import TreeIcon from '../../components/icons/TreeIcon.astro'
import GreeneryIcon from '../../components/icons/GreeneryIcon.astro'
import TruckIcon from '../../components/icons/TruckIcon.astro'
import QualityIcon from '../../components/icons/QualityIcon.astro'
import NetworkIcon from '../../components/icons/NetworkIcon.astro'
import TeamIcon from '../../components/icons/TeamIcon.astro'
import CountryFlag from '../../components/CountryFlag.astro'
import { BUSINESS_INFO } from '../../constants/business'
import { t } from '../../i18n'
import type { Locale } from '../../i18n'

const lang: Locale = 'fr'
const markets = BUSINESS_INFO.primaryMarkets
---

<Layout title={t('seo.home.title', lang)}>
  <!-- Hero Section with Video Background -->
  <section class="relative min-h-[90vh] flex items-center overflow-hidden">
    <!-- Video Background -->
    <video
      autoplay
      muted
      loop
      playsinline
      poster="/images/hero-fallback.jpg"
      class="absolute inset-0 w-full h-full object-cover"
    >
      <source src="/videos/hero-trees.mp4" type="video/mp4" />
    </video>

    <!-- Fallback Image (shows if video fails or for static export) -->
    <div
      class="absolute inset-0 bg-cover bg-center"
      style="background-image: url('/images/hero-fallback.jpg');"
    ></div>

    <!-- Overlay -->
    <div class="absolute inset-0 bg-gradient-to-r from-primary-900/90 via-primary-800/80 to-primary-700/70"></div>

    <!-- Content -->
    <div class="relative max-w-screen-xl mx-auto px-4 py-20 lg:py-32 w-full">
      <div class="max-w-3xl">
        <div class="inline-flex items-center gap-2 bg-white/10 backdrop-blur-sm rounded-full px-4 py-2 mb-8">
          <span class="w-2 h-2 bg-green-400 rounded-full animate-pulse"></span>
          <span class="text-white/90 text-sm font-medium">{t('header.topBar.yearsExcellence', lang)}</span>
        </div>

        <h1 class="text-5xl md:text-6xl lg:text-7xl font-bold text-white leading-[1.1] mb-8">
          {t('home.hero.title', lang).split('\n')[0]}<br />
          {t('home.hero.title', lang).split('\n')[1]}<br />
          <span class="text-primary-300">{t('home.hero.title', lang).split('\n')[2]}</span>
        </h1>

        <p class="text-xl lg:text-2xl text-white/80 mb-10 max-w-2xl leading-relaxed">
          {t('home.hero.subtitle', lang)}
        </p>

        <div class="flex flex-col sm:flex-row gap-4 mb-16">
          <a
            href="/fr/contact"
            class="inline-flex justify-center items-center px-8 py-4 bg-white text-primary-700 font-semibold rounded-xl hover:bg-gray-100 transition-all hover:shadow-lg text-lg"
          >
            {t('common.requestQuote', lang)}
            <svg class="w-5 h-5 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3"></path>
            </svg>
          </a>
          <a
            href="/fr/products"
            class="inline-flex justify-center items-center px-8 py-4 border-2 border-white/80 text-white font-semibold rounded-xl hover:bg-white hover:text-primary-700 transition-all text-lg"
          >
            {t('home.hero.cta', lang)}
          </a>
        </div>

        <!-- Trust Stats -->
        <div class="flex flex-wrap gap-8 lg:gap-12">
          <div>
            <div class="text-4xl lg:text-5xl font-bold text-white">{BUSINESS_INFO.stats.treesAnnually}</div>
            <div class="text-white/60 text-sm mt-1">{t('home.stats.treesAnnually', lang)}</div>
          </div>
          <div>
            <div class="text-4xl lg:text-5xl font-bold text-white">50+</div>
            <div class="text-white/60 text-sm mt-1">{t('home.stats.yearsExperience', lang)}</div>
          </div>
          <div>
            <div class="text-4xl lg:text-5xl font-bold text-white">6+</div>
            <div class="text-white/60 text-sm mt-1">{t('home.stats.europeanMarkets', lang)}</div>
          </div>
        </div>
      </div>
    </div>

    <!-- Scroll Indicator -->
    <div class="absolute bottom-8 left-1/2 -translate-x-1/2 text-white/50 animate-bounce">
      <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 14l-7 7m0 0l-7-7m7 7V3"></path>
      </svg>
    </div>
  </section>

<!-- Trust Bar -->
  <section class="bg-gray-50 border-b border-gray-100">
    <div class="max-w-screen-xl mx-auto px-4 py-8 lg:py-10">
      <div class="flex flex-wrap justify-center items-center gap-8 lg:gap-16">
        <div class="flex items-center gap-3 text-gray-500">
          <svg class="w-8 h-8 text-primary-600 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"></path>
          </svg>
          <div>
            <span class="block text-sm font-semibold text-gray-700">{t('home.trust.certified.title', lang)}</span>
            <span class="block text-xs text-gray-400">{t('home.trust.certified.subtitle', lang)}</span>
          </div>
        </div>
        <div class="flex items-center gap-3 text-gray-500">
          <svg class="w-8 h-8 text-primary-600 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M3.055 11H5a2 2 0 012 2v1a2 2 0 002 2 2 2 0 012 2v2.945M8 3.935V5.5A2.5 2.5 0 0010.5 8h.5a2 2 0 012 2 2 2 0 104 0 2 2 0 012-2h1.064M15 20.488V18a2 2 0 012-2h3.064M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
          </svg>
          <div>
            <span class="block text-sm font-semibold text-gray-700">{t('home.trust.european.title', lang)}</span>
            <span class="block text-xs text-gray-400">{t('home.trust.european.subtitle', lang)}</span>
          </div>
        </div>
        <div class="flex items-center gap-3 text-gray-500">
          <svg class="w-8 h-8 text-primary-600 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
          </svg>
          <div>
            <span class="block text-sm font-semibold text-gray-700">{t('home.trust.established.title', lang)}</span>
            <span class="block text-xs text-gray-400">{t('home.trust.established.subtitle', lang)}</span>
          </div>
        </div>
        <div class="flex items-center gap-3 text-gray-500">
          <svg class="w-8 h-8 text-primary-600 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="1.5" d="M19.428 15.428a2 2 0 00-1.022-.547l-2.387-.477a6 6 0 00-3.86.517l-.318.158a6 6 0 01-3.86.517L6.05 15.21a2 2 0 00-1.806.547M8 4h8l-1 1v5.172a2 2 0 00.586 1.414l5 5c1.26 1.26.367 3.414-1.415 3.414H4.828c-1.782 0-2.674-2.154-1.414-3.414l5-5A2 2 0 009 10.172V5L8 4z"></path>
          </svg>
          <div>
            <span class="block text-sm font-semibold text-gray-700">{t('home.trust.ownProduction.title', lang)}</span>
            <span class="block text-xs text-gray-400">{t('home.trust.ownProduction.subtitle', lang)}</span>
          </div>
        </div>
      </div>
    </div>
  </section>

    <!-- Products Section -->
  <section class="bg-white py-24 lg:py-32">
    <div class="max-w-screen-xl mx-auto px-4">
      <div class="text-center mb-16">
        <span class="inline-block text-primary-600 font-semibold text-sm uppercase tracking-wider mb-4">{t('nav.products', lang)}</span>
        <h2 class="text-4xl lg:text-5xl font-bold text-gray-900 mb-6">{t('home.products.title', lang)}</h2>
        <p class="text-xl text-gray-600 max-w-2xl mx-auto">
          {t('home.products.subtitle', lang)}
        </p>
      </div>

      <div class="grid md:grid-cols-2 gap-8 lg:gap-12 max-w-5xl mx-auto">
        <!-- Christmas Trees Card -->
        <ScrollReveal client:visible delay={0}>
          <a href="/fr/products/christmas-trees" class="group block h-full">
            <div class="relative bg-gray-50 rounded-3xl overflow-hidden h-full border border-gray-100 hover:border-primary-200 transition-all hover:shadow-2xl">
              <!-- Image Placeholder -->
              <div class="aspect-[4/3] bg-gradient-to-br from-primary-100 to-primary-50 flex items-center justify-center">
                <img
                  src="/images/products-trees.jpg"
                  alt="Christmas Trees"
                  class="w-full h-full object-cover"
                  onerror="this.style.display='none'; this.nextElementSibling.style.display='flex';"
                />
                <div class="hidden items-center justify-center absolute inset-0">
                  <TreeIcon class="text-primary-200" size={120} />
                </div>
              </div>

              <div class="p-8 lg:p-10">
                <h3 class="text-2xl lg:text-3xl font-bold text-gray-900 mb-4 group-hover:text-primary-700 transition-colors">
                  {t('home.products.christmasTrees.title', lang)}
                </h3>
                <p class="text-gray-600 mb-6 text-lg">
                  {t('home.products.christmasTrees.description', lang)}
                </p>
                <ul class="text-gray-500 space-y-2 mb-8">
                  <li class="flex items-center gap-2">
                    <svg class="w-5 h-5 text-primary-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                    </svg>
                    {t('products.quality.premium.name', lang)}, {t('products.quality.aGrade.name', lang)} &amp; {t('products.quality.standard.name', lang)}
                  </li>
                  <li class="flex items-center gap-2">
                    <svg class="w-5 h-5 text-primary-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                    </svg>
                    Netted &amp; palletized
                  </li>
                  <li class="flex items-center gap-2">
                    <svg class="w-5 h-5 text-primary-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                    </svg>
                    Private label available
                  </li>
                </ul>
                <span class="inline-flex items-center text-primary-600 font-semibold text-lg group-hover:gap-3 gap-2 transition-all">
                  View {t('home.products.christmasTrees.title', lang)}
                  <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3"></path>
                  </svg>
                </span>
              </div>
            </div>
          </a>
        </ScrollReveal>

        <!-- Greenery Card -->
        <ScrollReveal client:visible delay={150}>
          <a href="/fr/products/greenery" class="group block h-full">
            <div class="relative bg-gray-50 rounded-3xl overflow-hidden h-full border border-gray-100 hover:border-primary-200 transition-all hover:shadow-2xl">
              <!-- Image Placeholder -->
              <div class="aspect-[4/3] bg-gradient-to-br from-primary-100 to-primary-50 flex items-center justify-center">
                <img
                  src="/images/products-greenery.jpg"
                  alt="Decorative Greenery"
                  class="w-full h-full object-cover"
                  onerror="this.style.display='none'; this.nextElementSibling.style.display='flex';"
                />
                <div class="hidden items-center justify-center absolute inset-0">
                  <GreeneryIcon class="text-primary-200" size={120} />
                </div>
              </div>

              <div class="p-8 lg:p-10">
                <h3 class="text-2xl lg:text-3xl font-bold text-gray-900 mb-4 group-hover:text-primary-700 transition-colors">
                  {t('home.products.greenery.title', lang)}
                </h3>
                <p class="text-gray-600 mb-6 text-lg">
                  {t('home.products.greenery.description', lang)}
                </p>
                <ul class="text-gray-500 space-y-2 mb-8">
                  <li class="flex items-center gap-2">
                    <svg class="w-5 h-5 text-primary-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                    </svg>
                    {t('products.greeneryPage.applications.wreaths.title', lang)}
                  </li>
                  <li class="flex items-center gap-2">
                    <svg class="w-5 h-5 text-primary-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                    </svg>
                    {t('products.greeneryPage.applications.cemetery.title', lang)}
                  </li>
                  <li class="flex items-center gap-2">
                    <svg class="w-5 h-5 text-primary-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                    </svg>
                    {t('products.greeneryPage.applications.commercial.title', lang)}
                  </li>
                </ul>
                <span class="inline-flex items-center text-primary-600 font-semibold text-lg group-hover:gap-3 gap-2 transition-all">
                  View {t('home.products.greenery.title', lang)}
                  <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3"></path>
                  </svg>
                </span>
              </div>
            </div>
          </a>
        </ScrollReveal>
      </div>
    </div>
  </section>

  <!-- Our Approach Section -->
  <section class="bg-gray-50 py-24 lg:py-32">
    <div class="max-w-screen-xl mx-auto px-4">
      <div class="max-w-3xl mx-auto text-center mb-16">
        <span class="inline-block text-primary-600 font-semibold text-sm uppercase tracking-wider mb-4">{t('home.approach.label', lang)}</span>
        <h2 class="text-4xl lg:text-5xl font-bold text-gray-900 mb-6">{t('home.approach.title', lang)}</h2>
        <p class="text-xl text-gray-600">
          {t('home.approach.subtitle', lang)}
        </p>
      </div>
      
      <div class="grid lg:grid-cols-3 gap-8 lg:gap-10 max-w-5xl mx-auto">
        <ScrollReveal client:visible delay={0}>
          <div class="bg-white rounded-2xl p-8 lg:p-10 shadow-sm hover:shadow-lg transition-shadow h-full">
            <div class="w-14 h-14 bg-primary-100 rounded-xl flex items-center justify-center mb-6">
              <QualityIcon class="text-primary-600" size={32} />
            </div>
            <h3 class="text-xl font-bold text-gray-900 mb-3">{t('home.approach.quality.title', lang)}</h3>
            <p class="text-gray-600 mb-4">
              {t('home.approach.quality.description', lang)}
            </p>
            <ul class="space-y-2">
              <li class="flex items-start gap-2 text-sm text-gray-500">
                <svg class="w-4 h-4 text-primary-500 mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                </svg>
                {t('home.approach.quality.point1', lang)}
              </li>
              <li class="flex items-start gap-2 text-sm text-gray-500">
                <svg class="w-4 h-4 text-primary-500 mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                </svg>
                {t('home.approach.quality.point2', lang)}
              </li>
              <li class="flex items-start gap-2 text-sm text-gray-500">
                <svg class="w-4 h-4 text-primary-500 mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                </svg>
                {t('home.approach.quality.point3', lang)}
              </li>
            </ul>
          </div>
        </ScrollReveal>

        <ScrollReveal client:visible delay={100}>
          <div class="bg-white rounded-2xl p-8 lg:p-10 shadow-sm hover:shadow-lg transition-shadow h-full">
            <div class="w-14 h-14 bg-primary-100 rounded-xl flex items-center justify-center mb-6">
              <NetworkIcon class="text-primary-600" size={32} />
            </div>
            <h3 class="text-xl font-bold text-gray-900 mb-3">{t('home.approach.supplyChain.title', lang)}</h3>
            <p class="text-gray-600 mb-4">
              {t('home.approach.supplyChain.description', lang)}
            </p>
            <ul class="space-y-2">
              <li class="flex items-start gap-2 text-sm text-gray-500">
                <svg class="w-4 h-4 text-primary-500 mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                </svg>
                {t('home.approach.supplyChain.point1', lang)}
              </li>
              <li class="flex items-start gap-2 text-sm text-gray-500">
                <svg class="w-4 h-4 text-primary-500 mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                </svg>
                {t('home.approach.supplyChain.point2', lang)}
              </li>
              <li class="flex items-start gap-2 text-sm text-gray-500">
                <svg class="w-4 h-4 text-primary-500 mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                </svg>
                {t('home.approach.supplyChain.point3', lang)}
              </li>
            </ul>
          </div>
        </ScrollReveal>

        <ScrollReveal client:visible delay={200}>
          <div class="bg-white rounded-2xl p-8 lg:p-10 shadow-sm hover:shadow-lg transition-shadow h-full">
            <div class="w-14 h-14 bg-primary-100 rounded-xl flex items-center justify-center mb-6">
              <TruckIcon class="text-primary-600" size={32} />
            </div>
            <h3 class="text-xl font-bold text-gray-900 mb-3">{t('home.approach.partnership.title', lang)}</h3>
            <p class="text-gray-600 mb-4">
              {t('home.approach.partnership.description', lang)}
            </p>
            <ul class="space-y-2">
              <li class="flex items-start gap-2 text-sm text-gray-500">
                <svg class="w-4 h-4 text-primary-500 mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                </svg>
                {t('home.approach.partnership.point1', lang)}
              </li>
              <li class="flex items-start gap-2 text-sm text-gray-500">
                <svg class="w-4 h-4 text-primary-500 mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                </svg>
                {t('home.approach.partnership.point2', lang)}
              </li>
              <li class="flex items-start gap-2 text-sm text-gray-500">
                <svg class="w-4 h-4 text-primary-500 mt-0.5 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                </svg>
                {t('home.approach.partnership.point3', lang)}
              </li>
            </ul>
          </div>
        </ScrollReveal>
      </div>
    </div>
  </section>

  <!-- Delivery Coverage Section -->
  <section class="bg-white py-24 lg:py-32">
    <div class="max-w-screen-xl mx-auto px-4">
      <div class="text-center mb-16">
        <span class="inline-block text-primary-600 font-semibold text-sm uppercase tracking-wider mb-4">Delivery</span>
        <h2 class="text-4xl lg:text-5xl font-bold text-gray-900 mb-6">{t('home.deliveryCoverage.title', lang)}</h2>
        <p class="text-xl text-gray-600 max-w-2xl mx-auto">
          {t('home.deliveryCoverage.subtitle', lang)}
        </p>
      </div>

      <!-- Market Flags -->
      <div class="flex flex-wrap justify-center gap-4 lg:gap-6 mb-16">
        {markets.map((market) => (
          <div class="flex items-center bg-gray-50 rounded-xl px-6 py-4 hover:bg-primary-50 transition-colors">
            <span class="mr-4">
              <CountryFlag country={market} size={40} />
            </span>
            <span class="font-semibold text-gray-700 text-lg">{market}</span>
          </div>
        ))}
      </div>

      <!-- Delivery Features -->
      <div class="flex flex-wrap justify-center gap-6 lg:gap-10 text-gray-600">
        <div class="flex items-center gap-3 bg-gray-50 rounded-full px-6 py-3">
          <svg class="w-6 h-6 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
          </svg>
          <span class="font-medium">Full truck loads</span>
        </div>
        <div class="flex items-center gap-3 bg-gray-50 rounded-full px-6 py-3">
          <svg class="w-6 h-6 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
          </svg>
          <span class="font-medium">Mixed loads</span>
        </div>
        <div class="flex items-center gap-3 bg-gray-50 rounded-full px-6 py-3">
          <svg class="w-6 h-6 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
          </svg>
          <span class="font-medium">Day-to-day delivery</span>
        </div>
        <div class="flex items-center gap-3 bg-gray-50 rounded-full px-6 py-3">
          <svg class="w-6 h-6 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
