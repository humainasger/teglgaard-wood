---
import Layout from '../../../layouts/Layout.astro'
import { BUSINESS_INFO, TREE_SPECIES, GREENERY_PRODUCTS } from '../../../constants/business'
import { t } from '../../../i18n'
import type { Locale } from '../../../i18n'

const lang: Locale = 'fr'
---

<Layout
  title={t('seo.products.title', lang)}
  description={t('seo.products.description', lang)}
>
  <!-- Hero -->
  <section class="relative py-24 lg:py-32 overflow-hidden">
    <!-- Background Image -->
    <div class="absolute inset-0">
      <picture>
        <source srcset="/images/hero-fallback.webp" type="image/webp" />
        <img
          src="/images/hero-fallback.jpg"
          alt="Christmas tree plantation"
          class="w-full h-full object-cover"
        />
      </picture>
      <div class="absolute inset-0 bg-gradient-to-r from-primary-900/90 via-primary-800/80 to-primary-700/60"></div>
    </div>

    <div class="relative max-w-screen-xl mx-auto px-4">
      <div class="max-w-3xl">
        <h1 class="text-4xl lg:text-5xl font-bold text-white mb-6">{t('products.hero.title', lang)}</h1>
        <p class="text-xl text-primary-100">
          {t('products.hero.subtitle', lang)}
        </p>
      </div>
    </div>
  </section>

  <!-- Products Grid -->
  <section class="bg-white py-16 lg:py-24">
    <div class="max-w-screen-xl mx-auto px-4">
      <div class="grid md:grid-cols-2 gap-8 lg:gap-12">
        <!-- Christmas Trees -->
        <a href="/products/christmas-trees" class="group">
          <div class="bg-gray-50 rounded-2xl overflow-hidden h-full hover:shadow-xl transition-shadow">
            <div class="aspect-video relative overflow-hidden">
              <picture>
                <source srcset="/images/products-trees.webp" type="image/webp" />
                <img 
                  src="/images/products-trees.jpg" 
                  alt="Premium Nordmann fir Christmas trees" 
                  class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-500"
                  loading="lazy"
                />
              </picture>
            </div>
            <div class="p-8">
              <h2 class="text-2xl font-bold text-gray-900 mb-4 group-hover:text-primary-700 transition-colors">
                {t('products.christmasTrees.title', lang)}
              </h2>
              <p class="text-gray-600 mb-6">
                {t('products.christmasTrees.description', lang)}
              </p>
              
              <div class="mb-6">
                <h3 class="text-sm font-semibold text-gray-500 uppercase tracking-wide mb-3">Species Available</h3>
                <div class="flex flex-wrap gap-2">
                  {Object.values(TREE_SPECIES).map((species) => (
                    <span class="bg-white px-3 py-1 rounded-full text-sm text-gray-700 border border-gray-200">
                      {species.name}
                    </span>
                  ))}
                </div>
              </div>
              
              <span class="inline-flex items-center text-primary-600 font-semibold group-hover:text-primary-700">
                View Christmas Trees
                <svg class="w-5 h-5 ml-2 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3"></path>
                </svg>
              </span>
            </div>
          </div>
        </a>

        <!-- Decorative Greenery -->
        <a href="/products/greenery" class="group">
          <div class="bg-gray-50 rounded-2xl overflow-hidden h-full hover:shadow-xl transition-shadow">
            <div class="aspect-video relative overflow-hidden">
              <picture>
                <source srcset="/images/products-greenery.webp" type="image/webp" />
                <img 
                  src="/images/products-greenery.jpg" 
                  alt="Fresh decorative greenery and branches" 
                  class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-500"
                  loading="lazy"
                />
              </picture>
            </div>
            <div class="p-8">
              <h2 class="text-2xl font-bold text-gray-900 mb-4 group-hover:text-primary-700 transition-colors">
                Decorative Greenery
              </h2>
              <p class="text-gray-600 mb-6">
                Fresh-cut decorative greenery for wreaths, arrangements, and commercial decorating.
                Noble fir, Nordmann, cypress varieties, and more.
              </p>
              
              <div class="mb-6">
                <h3 class="text-sm font-semibold text-gray-500 uppercase tracking-wide mb-3">Products Available</h3>
                <div class="flex flex-wrap gap-2">
                  {Object.values(GREENERY_PRODUCTS).map((product) => (
                    <span class="bg-white px-3 py-1 rounded-full text-sm text-gray-700 border border-gray-200">
                      {product.name}
                    </span>
                  ))}
                </div>
              </div>
              
              <span class="inline-flex items-center text-primary-600 font-semibold group-hover:text-primary-700">
                View Greenery
                <svg class="w-5 h-5 ml-2 group-hover:translate-x-1 transition-transform" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3"></path>
                </svg>
              </span>
            </div>
          </div>
        </a>
      </div>
    </div>
  </section>

  <!-- CTA -->
  <section class="bg-gray-50 py-16">
    <div class="max-w-screen-xl mx-auto px-4 text-center">
      <h2 class="text-2xl font-bold text-gray-900 mb-4">Need a quote?</h2>
      <p class="text-gray-600 mb-6 max-w-xl mx-auto">
        Tell us what you need and we'll prepare a competitive quote within 24 hours.
      </p>
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <a 
          href="/contact" 
          class="inline-flex items-center justify-center px-6 py-3 bg-primary-600 text-white font-semibold rounded-lg hover:bg-primary-700 transition-colors"
        >
          Request Pricing
        </a>
        <a 
          href={`tel:${BUSINESS_INFO.phoneRaw}`}
          class="inline-flex items-center justify-center px-6 py-3 border-2 border-primary-600 text-primary-600 font-semibold rounded-lg hover:bg-primary-600 hover:text-white transition-colors"
        >
          <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
          </svg>
          Call {BUSINESS_INFO.phoneDisplay}
        </a>
      </div>
    </div>
  </section>
</Layout>
