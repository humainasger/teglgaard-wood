---
import Layout from '../../../layouts/Layout.astro'
import { BUSINESS_INFO, TREE_SPECIES, QUALITY_GRADES } from '../../../constants/business'
import { t } from '../../../i18n'
import type { Locale } from '../../../i18n'

const lang: Locale = 'fr'
const speciesImageMap: Record<string, string> = {
  nordmann: 'nordmann',
  noble: 'noble',
  fraser: 'fraser',
  spruce: 'norway-spruce'
}
---

<Layout
  title={t('seo.christmasTrees.title', lang)}
  description={t('seo.christmasTrees.description', lang)}
>
  <!-- Hero -->
  <section class="relative py-24 lg:py-32 overflow-hidden">
    <!-- Background Image -->
    <div class="absolute inset-0">
      <picture>
        <source srcset="/images/products-trees.webp" type="image/webp" />
        <img 
          src="/images/products-trees.jpg" 
          alt="Premium Christmas trees" 
          class="w-full h-full object-cover"
        />
      </picture>
      <div class="absolute inset-0 bg-gradient-to-r from-primary-900/90 via-primary-800/80 to-primary-700/60"></div>
    </div>
    
    <div class="relative max-w-screen-xl mx-auto px-4">
      <nav class="mb-6">
        <ol class="flex items-center text-sm text-primary-200">
          <li><a href="/" class="hover:text-white">Home</a></li>
          <li class="mx-2">/</li>
          <li><a href="/products" class="hover:text-white">Products</a></li>
          <li class="mx-2">/</li>
          <li class="text-white">Christmas Trees</li>
        </ol>
      </nav>
      <div class="max-w-3xl">
        <h1 class="text-4xl lg:text-5xl font-bold text-white mb-6">
          Premium Christmas Trees for European Retailers
        </h1>
        <p class="text-xl text-primary-100">
          Sourced from Denmark and our European grower network.
          All major species, all sizes, professional grading.
        </p>
      </div>
    </div>
  </section>

  <!-- Species Section -->
  <section class="bg-white py-16 lg:py-24">
    <div class="max-w-screen-xl mx-auto px-4">
      <div class="text-center mb-12">
        <h2 class="text-3xl font-bold text-gray-900 mb-4">Species Available</h2>
        <p class="text-lg text-gray-600 max-w-2xl mx-auto">
          We supply the most popular Christmas tree species for European markets.
          Other varieties available on request.
        </p>
      </div>

      <div class="grid md:grid-cols-2 gap-8">
        {Object.entries(TREE_SPECIES).map(([key, species]) => {
          const imageName = speciesImageMap[key] || key
          
          return (
            <div class="bg-gray-50 rounded-xl overflow-hidden">
              <!-- Species Image -->
              <div class="aspect-[4/3] relative overflow-hidden">
                <picture>
                  <source srcset={`/images/species/${imageName}.webp`} type="image/webp" />
                  <img 
                    src={`/images/species/${imageName}.jpg`}
                    alt={species.name}
                    class="w-full h-full object-cover"
                    loading="lazy"
                  />
                </picture>
                {key === 'nordmann' && (
                  <span class="absolute top-4 right-4 bg-primary-600 text-white text-xs font-semibold px-3 py-1 rounded-full">
                    Most Popular
                  </span>
                )}
              </div>
              
              <div class="p-6 lg:p-8">
                <div class="mb-4">
                  <h3 class="text-xl font-bold text-gray-900">{species.name}</h3>
                  <p class="text-sm text-gray-500 italic">{species.scientificName}</p>
                </div>
                <p class="text-gray-600 mb-6">{species.description}</p>
                <div>
                  <h4 class="text-sm font-semibold text-gray-500 uppercase tracking-wide mb-2">Sizes Available</h4>
                  <div class="flex flex-wrap gap-2">
                    {species.sizes.map((size) => (
                      <span class="bg-white px-3 py-1 rounded text-sm text-gray-700 border border-gray-200">
                        {size}
                      </span>
                    ))}
                  </div>
                </div>
              </div>
            </div>
          )
        })}
      </div>
    </div>
  </section>

  <!-- Size Chart -->
  <section class="bg-gray-50 py-16 lg:py-24">
    <div class="max-w-screen-xl mx-auto px-4">
      <div class="text-center mb-12">
        <h2 class="text-3xl font-bold text-gray-900 mb-4">Size Range</h2>
        <p class="text-lg text-gray-600 max-w-2xl mx-auto">
          From compact 1-meter trees to impressive 7-meter specimens for commercial displays.
        </p>
      </div>

      <div class="max-w-4xl mx-auto">
        <div class="bg-white rounded-xl shadow-sm overflow-hidden">
          <div class="grid grid-cols-2 md:grid-cols-4 lg:grid-cols-6 divide-x divide-y divide-gray-100">
            {['100-150cm', '150-175cm', '175-200cm', '200-250cm', '250cm+', 'Large 3-7m'].map((size, index) => (
              <div class="p-6 text-center">
                <div class="text-3xl mb-2" style={`height: ${20 + index * 8}px`}>
                  <svg class="w-full h-full text-primary-300" viewBox="0 0 24 24" fill="currentColor">
                    <path d="M12 2L4 12h4v4H8l4 6 4-6h-2v-4h4L12 2z"/>
                  </svg>
                </div>
                <span class="text-sm font-medium text-gray-700">{size}</span>
              </div>
            ))}
          </div>
        </div>
        <p class="text-center text-sm text-gray-500 mt-4">
          Custom size requirements? Contact us to discuss your specific needs.
        </p>
      </div>
    </div>
  </section>

  <!-- Quality Grades -->
  <section class="bg-white py-16 lg:py-24">
    <div class="max-w-screen-xl mx-auto px-4">
      <div class="text-center mb-12">
        <h2 class="text-3xl font-bold text-gray-900 mb-4">Quality Grades</h2>
        <p class="text-lg text-gray-600 max-w-2xl mx-auto">
          Every tree is professionally graded to consistent standards.
          Choose the right quality for your market.
        </p>
      </div>

      <div class="grid md:grid-cols-3 gap-8 max-w-5xl mx-auto">
        {Object.entries(QUALITY_GRADES).map(([key, grade], index) => (
          <div class={`rounded-xl p-8 text-center ${index === 0 ? 'bg-primary-50 border-2 border-primary-200' : 'bg-gray-50'}`}>
            {index === 0 && (
              <div class="text-primary-600 text-sm font-semibold uppercase tracking-wide mb-2">
                Top Quality
              </div>
            )}
            <h3 class="text-2xl font-bold text-gray-900 mb-4">{grade.name}</h3>
            <p class="text-gray-600">{grade.description}</p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Packaging & Delivery -->
  <section class="bg-gray-50 py-16 lg:py-24">
    <div class="max-w-screen-xl mx-auto px-4">
      <div class="text-center mb-12">
        <h2 class="text-3xl font-bold text-gray-900 mb-4">Packaging & Delivery</h2>
        <p class="text-lg text-gray-600 max-w-2xl mx-auto">
          Professional preparation and flexible delivery options.
        </p>
      </div>

      <div class="grid sm:grid-cols-2 lg:grid-cols-4 gap-6 max-w-5xl mx-auto">
        <div class="bg-white rounded-xl p-6 text-center">
          <div class="w-12 h-12 bg-primary-100 rounded-lg flex items-center justify-center mx-auto mb-4">
            <svg class="w-6 h-6 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 21a4 4 0 01-4-4V5a2 2 0 012-2h4a2 2 0 012 2v12a4 4 0 01-4 4zm0 0h12a2 2 0 002-2v-4a2 2 0 00-2-2h-2.343M11 7.343l1.657-1.657a2 2 0 012.828 0l2.829 2.829a2 2 0 010 2.828l-8.486 8.485M7 17h.01"></path>
            </svg>
          </div>
          <h3 class="font-semibold text-gray-900 mb-2">Netting</h3>
          <p class="text-sm text-gray-600">All trees professionally netted for transport</p>
        </div>

        <div class="bg-white rounded-xl p-6 text-center">
          <div class="w-12 h-12 bg-primary-100 rounded-lg flex items-center justify-center mx-auto mb-4">
            <svg class="w-6 h-6 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M20 7l-8-4-8 4m16 0l-8 4m8-4v10l-8 4m0-10L4 7m8 4v10M4 7v10l8 4"></path>
            </svg>
          </div>
          <h3 class="font-semibold text-gray-900 mb-2">Palletizing</h3>
          <p class="text-sm text-gray-600">Efficient pallet loading for easy handling</p>
        </div>

        <div class="bg-white rounded-xl p-6 text-center">
          <div class="w-12 h-12 bg-primary-100 rounded-lg flex items-center justify-center mx-auto mb-4">
            <svg class="w-6 h-6 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M7 7h.01M7 3h5c.512 0 1.024.195 1.414.586l7 7a2 2 0 010 2.828l-7 7a2 2 0 01-2.828 0l-7-7A1.994 1.994 0 013 12V7a4 4 0 014-4z"></path>
            </svg>
          </div>
          <h3 class="font-semibold text-gray-900 mb-2">Custom Labeling</h3>
          <p class="text-sm text-gray-600">Your branding, our quality trees</p>
        </div>

        <div class="bg-white rounded-xl p-6 text-center">
          <div class="w-12 h-12 bg-primary-100 rounded-lg flex items-center justify-center mx-auto mb-4">
            <svg class="w-6 h-6 text-primary-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7H5a2 2 0 00-2 2v9a2 2 0 002 2h14a2 2 0 002-2V9a2 2 0 00-2-2h-3m-1 4l-3 3m0 0l-3-3m3 3V4"></path>
            </svg>
          </div>
          <h3 class="font-semibold text-gray-900 mb-2">Flexible Delivery</h3>
          <p class="text-sm text-gray-600">FTL, mixed loads, day-to-day</p>
        </div>
      </div>
    </div>
  </section>

  <!-- CTA -->
  <section class="bg-primary-700 py-16 lg:py-20">
    <div class="max-w-screen-xl mx-auto px-4 text-center">
      <h2 class="text-3xl font-bold text-white mb-4">Request Pricing</h2>
      <p class="text-lg text-primary-100 mb-8 max-w-2xl mx-auto">
        Tell us your requirements and we'll prepare a competitive quote within 24 hours.
      </p>
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <a 
          href="/contact" 
          class="inline-flex items-center justify-center px-8 py-4 bg-white text-primary-700 font-semibold rounded-lg hover:bg-gray-100 transition-colors"
        >
          Get a Quote
        </a>
        <a 
          href={`tel:${BUSINESS_INFO.phoneRaw}`}
          class="inline-flex items-center justify-center px-8 py-4 border-2 border-white text-white font-semibold rounded-lg hover:bg-white hover:text-primary-700 transition-colors"
        >
          <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
          </svg>
          Call {BUSINESS_INFO.phoneDisplay}
        </a>
      </div>
    </div>
  </section>
</Layout>
